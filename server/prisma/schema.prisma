generator client {
  provider   = "prisma-client-js"
  engineType = "client"
}

datasource db {
  provider = "postgresql"
}

model User {
  id         String  @id @default(uuid())
  email      String? @unique
  password   String?
  isGuest    Boolean @default(false)
  isVerified Boolean @default(false)

  otpCode    String?
  otpExpires DateTime?

  fishingSessions FishingSession[]

  gold     Int @default(0)
  points   Int @default(0)
  rodLevel Int @default(1)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([points(sort: Desc)], name: "idx_user_points")
  @@index([isVerified, isGuest], name: "idx_user_verified_guest")
}

model FishingSession {
  id        String   @id @default(uuid())
  userId    String
  fishType  String?
  biteAt    DateTime
  expiresAt DateTime
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "idx_fishing_session_user")
  @@index([expiresAt], name: "idx_fishing_session_expires")
}
